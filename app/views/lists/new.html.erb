<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h2>New List</h2>
        <div class="row">
          <div class="col-10">
            <%= simple_form_for @list do |f|%>
              <%= f.input :name, placeholder: 'e.g. Classics to rewatch'%>
              <%= f.input :image, as: :file %>
              <%= f.button :submit, 'Create List', class: 'btn btn-flat' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
